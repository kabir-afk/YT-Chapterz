{
  "manifest_version": 3,
  "name": "YT-Chapterz",
  "version": "1.0.0",
	"author": "Kabir Singh",
	"description": "This extension allows you to summarize a video into different chapters if not already present",
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "action": {
    "default_title": "YT-Chapterz",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ]
}